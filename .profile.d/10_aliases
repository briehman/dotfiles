# Grep aliases
alias grep='grep --color=auto'
alias ag="ack-grep"

# Vim aliases
alias v=vim
alias vi=vim
alias vd=vimdiff

# Shell aliases
alias f=find
alias k=kill
alias ka=killall
alias ls="ls --color=auto"
alias ll="ls -Al --color=auto"
alias lld="ls -Ald --color=auto"

# Git aliases
alias g=git
alias ga="git add"
alias gs="git status"
alias gd="git diff"
alias gst="git staged"
alias gg="git grep"
alias gl="git log"
alias glnm="git log --no-merges"
alias glr="git log --reverse"

# svn aliases
alias myb="svn_list_my_branches"
alias sb="svn_branch"
alias svs="svn status"
alias svu="svnup"
alias svr="svn revert"

# tmux aliases
alias tm=tmux
alias tma="tmux attach-session"
alias tml="tmux list-sessions"

# Function
alias vgg="vimgitgrep"
alias vf="vimfind"

# vagrant
alias vg=vagrant
