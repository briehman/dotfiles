_source_path() {
  local f="$HOME/.bash_rc.d/$1"
  [ -r "$f" ] && . "$f"
  [ -r "${f}.local" ] && . "${f}.local"
}

for t in path aliases shell functions completion; do
  _source_path $t
done

unset -f _source_path

# Load RVM into a shell session *as a function*
[[ -s "$HOME/.rvm/scripts/rvm" ]] \
  && source "$HOME/.rvm/scripts/rvm"
