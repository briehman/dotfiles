# Grep aliases
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias ag="ack-grep"

# Vim aliases
alias v=vim
alias vi=vim

# Shell aliases
alias k=kill
alias ka=killall
alias ls="ls --color=auto"
alias ll="ls -Al --color=auto"
alias lld="ls -Ald --color=auto"

# Git aliases
alias g=git
alias ga="git add"
alias gs="git status"
alias gd="git diff"
alias gst="git staged"
alias gg="git grep"
alias gl="git log"
complete -F _git g -o default

# svn aliases
alias sb="svn_branch"

# tmux aliases
alias tm=tmux
complete -o default -o nospace -F _tmux tm
alias tma="tmux attach-session"
alias tml="tmux list-sessions"

# Function
alias vgg="vimgitgrep"
alias vf="vimfind"

# vagrant
alias vg=vagrant
